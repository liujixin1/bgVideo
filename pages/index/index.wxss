.swiper-banner {
  height: 500rpx;
  width: 100%;
}
.swiper-banner swiper-item .videoPop{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
}
.swiper-banner swiper-item .videoPop .icon-pause{
  font-size: 120rpx;
  color: #fff;
  margin-left: 315rpx;
  line-height: 420rpx;
  opacity: 0.7;
}
.swiper-banner swiper-item image {
  height: 100%;
  width: 100%;
}
.bannerText{
  position: absolute;
  bottom: 30rpx;
  left: 0;
  height: 80rpx;
  z-index: 100;
  font-size: 32rpx;
  color: #fff;
  width: 80%;
  padding: 0 10%;
  font-weight: bold;
}
.main{
  width: 730rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}
.list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.list .listItem {
  width: 360rpx;
  height: 500rpx;
  position: relative;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.list .listItem .itemImg {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.list .listItem .itemText {
  position: absolute;
  bottom: 20rpx;
  width: 320rpx;
  left: 20rpx;
  color: #fff;
  font-size: 24rpx;
}
.isEnd{
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
  color: #999;
}